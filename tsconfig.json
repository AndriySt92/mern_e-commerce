{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./server",     
    "baseUrl": "./",
    "paths": {
      "@/*": ["./server/*"]
    }
  },
  "include": ["server/**/*.ts"], 
  "exclude": ["node_modules"] 
}