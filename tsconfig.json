{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./server",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./server/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "server/interfaces/**/*.ts" // Ensure this path is correct
  ],
  "exclude": ["node_modules"]
}